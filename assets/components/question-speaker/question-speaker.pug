mixin question-speaker()
    +b.question-speaker
        form(id="question-speaker__form" method='POST' action='/')
            +e.content.row
                .col-12.col-sm-5.pb-sm-00
                    +e.input.pb-10
                        +input("text", "username","имя")
                    +e.input.pb-10.pb-sm-00
                        +input("text", "useremail","почта")
                .col-12.col-sm-7.pb-20.pb-sm-00
                    +e.textarea
                        +textarea("usermessage" , "CООБЩЕНИЕ")
                +e.textarea_oh
                    +textarea("message")
                +e.response
                +input("hidden","programName").program-name program-name
                +input("hidden","speakerName").speaker-name speaker-name
                .col-12.col-sm-6.col-offset-sm-2.pt-sm-10
                    +e.button
                        +button('Записаться','button__color_red',"submit","userbutton")
